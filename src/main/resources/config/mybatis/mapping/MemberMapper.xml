<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ytt.mapper.MemberMapper">

    <resultMap id="userMap" type="com.ytt.model.RUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" jdbcType="VARCHAR" property="username" javaType="java.lang.String" />
        <result column="password" jdbcType="VARCHAR" property="password" javaType="java.lang.String"/>
    </resultMap>

    <sql id="allField">
        id,username,password
    </sql>

    <sql id="allCondition">
        username= #{username}
        AND password = #{password}
    </sql>

    <select id="selectOne" resultMap="userMap" useCache="false">
        SELECT
          <include refid="allField"/>
        FROM
          r_user
        WHERE
          <include refid="allCondition"/>
    </select>

    <select id="selectAll" resultMap="userMap" useCache="false">
        SELECT * FROM r_user
    </select>
</mapper>